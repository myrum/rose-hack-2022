<!DOCTYPE html>
<html>

<body>
    <br>
<div class="card">

    <div class="card-header">
        <h5 class="card-title">Search Our Recipes!</h5>
    </div>

    <!-- <div class="card-body"> -->
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <%= form_tag recipes_path, class: 'form' do %>
                  <%= label :recipe, :title, 'Recipe Title', class: 'col-form-label' %>
                  <%= text_field :recipe, :title, class: 'form-control' %>
            </li>
            <li class="list-group-item">
                  <br/>
                  <%= submit_tag 'Search', class: 'btn btn-primary' %>
                  <%= link_to 'Cancel', recipes_path, class: 'btn btn-secondary' %>
                <% end %>
            </li>

        </ul>

    <!-- </div> -->

</div>

</body>

</html>