<!DOCTYPE html>
<html>

<body>
    <br>
<div class="card">

    <div class="card-header">
        <h5 class="card-title">Search Our Recipes!</h5>
    </div>

    <!-- <div class="card-body"> -->
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
            <%= form_tag search_path, class: 'form' do %>
                  <%= label :recipe, :category, 'Category', class: 'col-form-label' %>
                  <%= select :recipe, :category, ['Breakfast', 'Lunch', 'Dinner', 'Drink', 'Snack'], {}, {class: 'form-control col-3'} %>
            </li>
            <li class="list-group-item">
                  <br/>
                  <%= submit_tag 'Search', class: 'btn btn-primary' %>
                  <%= link_to 'Cancel', recipes_path, class: 'btn btn-secondary' %>
                <% end %>
            </li>

        </ul>

    <!-- </div> -->

</div>

<div>
  <% if params[:commit] == 'Search' %>
    <%= render :partial => 'recipe_list', :locals => { :recipe => @recipe } %>
  <% end %>
</div>

</body>
</html>